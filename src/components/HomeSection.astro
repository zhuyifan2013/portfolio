---
type Props = {
  title: string;
  href?: string;
};

const { title, href } = Astro.props as Props;
---

<section class="home-section panel">
  <header class="section-header">
    <h2>{title}</h2>
    {href && (
      <a class="view-all" href={href}>
        <span>View all</span>
        <span aria-hidden="true">â†’</span>
      </a>
    )}
  </header>
  <div class="section-body">
    <slot />
  </div>
</section>

<style>
  .home-section {
    padding: 16px 16px 14px;
    margin-bottom: 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 10px;
  }

  h2 {
    margin: 0;
    font-size: 1.05rem;
    letter-spacing: -0.01em;
  }

  .view-all {
    color: var(--muted);
    font-size: 0.95rem;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid transparent;
    transition: background 0.15s ease, border-color 0.15s ease, color 0.15s ease;
  }

  .view-all:hover,
  .view-all:focus-visible {
    color: var(--text);
    background: rgba(143, 166, 160, 0.12);
    border-color: rgba(143, 166, 160, 0.4);
  }

  .section-body {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
</style>
