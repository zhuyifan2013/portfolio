---
import fs from 'node:fs';
import type { CollectionEntry } from 'astro:content';

type Props = {
  notes: CollectionEntry<'notes'>[];
};

const formatDateTime = (date: Date) =>
  new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit',
    hour12: false,
  }).format(date);

const getTimes = async (note: CollectionEntry<'notes'>) => {
  try {
    const fileUrl = new URL(`../content/${note.collection}/${note.id}`, import.meta.url);
    const stats = await fs.promises.stat(fileUrl);
    return { createdAt: stats.birthtime, updatedAt: stats.mtime };
  } catch (err) {
    const fallback = note.data.publishedAt ?? new Date();
    return { createdAt: fallback, updatedAt: fallback };
  }
};

const renderedNotes = await Promise.all(
  (Astro.props as Props).notes.map(async (note) => ({
    note,
    times: await getTimes(note),
    Content: (await note.render()).Content,
  }))
);
---

<div class="note-list">
  {renderedNotes.map(({ note, times, Content }) => (
    <article class="note-card" aria-label={note.data.title || 'Note'}>
      <div class="note-meta">
        <span class="muted">{formatDateTime(times.updatedAt)}</span>
      </div>
      <div class="note-body">
        <Content />
      </div>
    </article>
  ))}
</div>

<style>
  .note-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .note-card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 12px 14px;
    background: rgba(255, 255, 255, 0.65);
  }

  .note-meta {
    display: flex;
    justify-content: flex-end;
    font-size: 0.9rem;
    margin-bottom: 6px;
  }

  .note-body :global(p) {
    margin: 0 0 0.6em;
    line-height: 1.7;
  }

  .note-body :global(p:last-child) {
    margin-bottom: 0;
  }

  .note-body :global(ul),
  .note-body :global(ol) {
    padding-left: 1.1em;
    margin: 0 0 0.6em;
  }

  .note-body :global(code) {
    background: rgba(0, 0, 0, 0.04);
    border-radius: 6px;
    padding: 2px 6px;
  }

  .note-body :global(pre) {
    background: rgba(0, 0, 0, 0.04);
    border-radius: 10px;
    padding: 10px;
    overflow-x: auto;
  }
</style>
